{
  "name": "Imperial EDSML Practicals",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "./.extensions/eds-guide-0.0.1.vsix"
      ]
    }
  },
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.profiles.linux": {
      "bash": { "path": "/bin/bash", "args": ["-l"] }
    },
    "python.defaultInterpreterPath": "/opt/conda/envs/eds-geospatial/bin/python"
  },
  "remoteUser": "mamba"
}
