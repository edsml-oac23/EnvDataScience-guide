{
  "name": "Imperial EDSML Practicals",
  "build": { "dockerfile": "Dockerfile", "context": "." },
  "remoteUser": "vscode",  // ‚Üê Critical: runs as non-root
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "EnvDataScience.eds-guide"
      ]
    }
  },
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.profiles.linux": {
      "bash": { "path": "/bin/bash", "args": ["-l"] }
    },
    "python.defaultInterpreterPath": "/opt/conda/envs/eds-geospatial/bin/python"
  }
}